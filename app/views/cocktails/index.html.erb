<div class="banner">
  <div class="banner-content">
    <h1>Le Wagon's cocktails</h1>
    <p>Awesome beverages for developers nightlife</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
          <div class="card-description">
          </div>
          <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: 'card-link' %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
